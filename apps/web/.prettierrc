{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],
	"importOrder": [
		"^svelte$",
		"^svelte/",
		"^@sveltejs/",
		"<THIRD_PARTY_MODULES>",
		"^\\$app/",
		"^\\$lib/",
		"^\\./",
		"^\\.\\./"
	],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
